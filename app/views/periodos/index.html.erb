<div class="container">
<h1>
  <%= link_to :admin, class: "pull-right btn btn-default" do %>
    <span class="glyphicon glyphicon-cog"></span>
    Administración
  <% end %>
  Listado de períodos
  <%= link_to new_periodo_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus"></span> Nuevo
  <%end%>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periodos.each do |periodo| %>
      <tr>
        <td><%= periodo.nombre %></td>
        <td><%= periodo.descripcion %></td>
        <td>
        <%= button_to periodo, method: :get, class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-eye-open"></i>
          <% end %>
        </td>
        <td>
          <%= button_to edit_periodo_path(periodo), method: :get, class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
        </td>
        <td>
          <%= button_to periodo, method: :delete, data: { confirm: "¿Seguro que desea eliminar #{periodo.nombre}?" }, class: 'btn btn-danger' do %>
            <i class="glyphicon glyphicon-remove"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>