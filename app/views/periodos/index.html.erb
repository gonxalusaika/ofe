<div class="container">
<h1>Listing periodos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periodos.each do |periodo| %>
      <tr>
        <td><%= periodo.nombre %></td>
        <td><%= periodo.descripcion %></td>
        <td><%= button_to 'Show', periodo, method: :get, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_periodo_path(periodo), method: :get, class: "btn btn-default" %></td>
        <td><%= button_to 'Destroy', periodo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Periodo', new_periodo_path %>
</div>