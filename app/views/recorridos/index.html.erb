<div class="container">
<h1>Listing recorridos
  <%= button_to new_recorrido_path, method: :get, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus"></span> Nuevo
  <%end%>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recorridos.each do |recorrido| %>
      <tr>
        <td><%= recorrido.nombre %></td>
        <td><%= button_to 'Show', recorrido, method: :get, class: 'btn btn-default' %></td>
        
        <td><%= button_to 'Destroy', recorrido, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>