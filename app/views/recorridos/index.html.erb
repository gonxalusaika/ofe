<div class="container">
<h1>Listing recorridos
  <%= button_to new_recorrido_path, method: :get, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus"></span> Nuevo
  <%end%>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha creacion</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @recorridos.each do |recorrido| %>
      <tr>
        <td><%= recorrido.nombre %></td>
        <td><%= recorrido.created_at.strftime('%d/%m/%Y %H:%M') %></td>
        <td>
          <%= button_to recorrido, method: :get, class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-eye-open"></i>
          <% end %>
        </td>
        <td>
          <%= button_to recorrido, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
            <i class="glyphicon glyphicon-remove"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>