<div class="container">
<h1>    
  <%= link_to :admin, class: "pull-right btn btn-default" do %>
    <span class="glyphicon glyphicon-cog"></span>
    Administración
  <% end %>
  Dinosaurios
  <%= button_to new_dinosaurio_path, method: :get, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus"></span> Nuevo
  <%end%>
</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Periodo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dinosaurios.each do |dinosaurio| %>
      <tr>
        <td><%= image_tag dinosaurio.pathImagen %></td>
        <td><%= dinosaurio.nombre %></td>
        <td><%= dinosaurio.descripciones[0].contenido unless dinosaurio.descripciones.size == 0 %></td>
        <td><%= dinosaurio.periodo.nombre unless dinosaurio.periodo.nil? %></td>
        <td>
          <%= button_to "dinosaurios/#{dinosaurio.id}/preguntas", method: :get, class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-question-sign"></span>
          <% end %>
        </td>
        <td>
          <%= button_to dinosaurio, method: :get, class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-eye-open"></i>
          <% end %>
        </td>
        <td>
          <%= button_to edit_dinosaurio_path(dinosaurio), method: :get, class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
        </td>
        <td>
          <%= button_to dinosaurio, method: :delete, data: { confirm: "¿Seguro que desea eliminar #{dinosaurio.nombre}?" }, class: 'btn btn-danger' do %>
            <i class="glyphicon glyphicon-remove"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>