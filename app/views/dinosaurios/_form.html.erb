<%= form_for(@dinosaurio) do |f| %>
  <% if @dinosaurio.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
      <% @dinosaurio.errors.each_with_index do |message, i| %>
        <li><%= message[1] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, class: "form-control"  %>
  </div>
  <div class="field form-group">
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion, class: "form-control"  %>
  </div>
  <div class="field form-group">
    <%= f.label :periodo %>
    <%= collection_select :dinosaurio, :periodo_id, Periodo.all, :id, :nombre, {prompt: false}, {class: "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :icono %>
    <%= f.file_field :icono %>
  </div>
  <div class="actions">
    <%= f.submit 'Registrar', class: "btn btn-default" %>
  </div>
<% end %>
