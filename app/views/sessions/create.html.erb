<div class="container">
	<div class="col-md-6 col-md-offset-3">

		<div class="panel panel-default" style="margin-top: 40px">
			<div class="panel-body" style="background:white">
					<%= image_tag 'logo.png', class: "img-responsive center-block"%>
					<h1 class="text-center">Oculus for Education</h1>
				<%= form_tag login_user_path, class: "form" do %>
					<% unless @error.nil? %>
						<div class="alert alert-danger">
							<%= @error %>
						</div>
					<% end %>
				  <div class="form-group">
				  	<div class="input-group">
              <div class="input-group-addon">
                  <i class="glyphicon glyphicon-envelope"></i>
              </div>
              <%= text_field_tag :email, params[:email], class: "form-control" %>
          </div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon">
							<i class="glyphicon glyphicon-lock"></i>
						</div>
				    <%= password_field_tag :password, params[:password], class: "form-control"  %>
					</div>
				</div>
				  <p><%= submit_tag "Iniciar sesion", class: "btn btn-default pull-right" %></p>
				<% end %>

			</div>
		</div>
	</div>
</div>