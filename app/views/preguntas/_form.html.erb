<%= form_for(@pregunta) do |f| %>
  <% if @pregunta.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pregunta.errors.count, "error") %> han impedido que se guarde la pregunta:</h2>

      <ul>
      <% @pregunta.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :contenido %>
    <%= f.text_field :contenido, class: "form-control" %><br>
  </div>
  <div class="field form-group">
    <%= f.label :dinosaurio %>
    <%= collection_select :pregunta, :dinosaurio_id, Dinosaurio.all, :id, :nombre, {prompt: false}, {class: "form-control"} %>
  </div>
  <div class="respuestas">
    <% @pregunta.respuestas.each_with_index do |respuesta, index| %>
      <%= f.fields_for :respuestas, respuesta do |r| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Respuesta <%= index+1 %></h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">
                  <%= r.check_box :es_correcta %>
                </div>
                <%= r.text_field :contenido, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">
                  feedback
                </div>
                <%= r.text_field :feedback, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit "Confirmar", class: "btn btn-default" %>
  </div>
<% end %>
