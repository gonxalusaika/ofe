<div class="container">
<h1>
  <%= link_to :admin, class: "pull-right btn btn-default" do %>
    <span class="glyphicon glyphicon-cog"></span>
    Administración
  <% end %>
  <% if @dinosaurio %>
    <%= image_tag @dinosaurio.pathImagen if @dinosaurio.pathImagen %>
    Preguntas de <%= @dinosaurio.nombre %>
  <% else %>
    Preguntas
  <% end %>
  <%= link_to new_pregunta_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus"></span> Nuevo
  <%end%>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Contenido</th>
      <th>Dinosaurio</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @preguntas.each do |pregunta| %>
      <tr>
        <td><%= pregunta.contenido %></td>
        <td><%= pregunta.dinosaurio.nombre unless pregunta.dinosaurio.nil? %></td>
        <td>
        <%= button_to pregunta, method: :get, class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-eye-open"></i>
          <% end %>
        </td>
        <td>
          <%= button_to edit_pregunta_path(pregunta), method: :get, class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
        </td>
        <td>
          <%= button_to pregunta, method: :delete, data: { confirm: "¿Seguro que desea eliminar #{pregunta.nombre}?" }, class: 'btn btn-danger' do %>
            <i class="glyphicon glyphicon-remove"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>